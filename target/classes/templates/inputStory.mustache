    <script>
        tinymce.init({
            selector: '#mytextarea',

        });
    </script>
    <script>
        tinymce.init({
            selector: '#mytxt',
            height: 500,
            toolbar_drawer: 'floating'
        });
    </script>

</head>

<body>
<div class="container">
    <br>
    <!-- Панель навигации -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded-top">
        <a href="/mainPage" class="navbar-brand">FANStore</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>
</div>
<br>
<div class="container">
    <div>
        <h1  inline="text text-">Hello, {{currentUser}}</h1>
    </div>
</div>
<br>
<div class="container" >

    <form method="post" action="/inputStory" style="height: 800px">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <div class="container" >
            <input class="form-control" type="text" aria-describedby="emailHelp" id="exampleInputEmail1" name="title" placeholder="Введите заголовок..">
        </div>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <div class="container" >
            <input id="mytxt" name="annotation" placeholder="Введите аннотацию..">
        </div>
        <br>
        <input type="submit" class="btn btn-primary" value="Create Story">
    </form>
</div>
<!-- Optional JavaScript -->
